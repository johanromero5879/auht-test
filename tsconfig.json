{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@app": ["src/app"],
      "@config/*": ["src/config/*"],
      "@auth/*": ["src/auth/*"],
      "@shared/*": ["src/shared/*"],
      "@container/*": ["src/container/*"],
      "@tests/*": ["tests/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,                             
    "skipLibCheck": true
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}
